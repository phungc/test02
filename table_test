-- Create table
CREATE OR REPLACE TABLE synthetic_data (
  country_name VARCHAR(50),
  country_code VARCHAR(3),
  currency VARCHAR(3),
  my_year_month VARCHAR(6),
  industry VARCHAR(20),
  alpha_col VARCHAR(10),
  string_col VARCHAR(7),
  digits_col NUMBER(10),
  float_col FLOAT
);

-- Generate 100 rows of synthetic data
INSERT INTO synthetic_data
SELECT 
  country_name, 
  country_code, 
  currency, 
  TO_CHAR(DATEADD('month', SEQ4(), '2021-01-01'), 'YYYYMM') AS my_year_month, 
  CASE SEQ4() % 5
    WHEN 0 THEN 'energy'
    WHEN 1 THEN 'technology'
    WHEN 2 THEN 'finance'
    WHEN 3 THEN 'healthcare'
    WHEN 4 THEN 'entertainment'
  END AS industry, 
  RANDOM_STRING(10, 'ABCDEFGHIJKLMNOPQRSTUVWXYZ') AS alpha_col, 
  CONCAT(RANDOM_STRING(2, 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'), RANDOM_STRING(5, '0123456789')) AS string_col, 
  FLOOR(RANDOM() * 10000000000) AS digits_col, 
  1000000 + (RANDOM() * 99900000) AS float_col
FROM country_tbl
CROSS JOIN TABLE(GENERATOR(ROWCOUNT => 100));
